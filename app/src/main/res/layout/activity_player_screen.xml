<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.zachcrabtree.commonconscience.PlayerScreen">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="stressUp"
        android:id="@+id/stressUp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="stressDown"
        android:id="@+id/stressDown"
        android:layout_alignBottom="@+id/stressUp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="happyUp"
        android:id="@+id/happyUp"
        android:layout_above="@+id/stressUp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="happyDown"
        android:id="@+id/happyDown"
        android:layout_above="@+id/stressDown"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="energyUp"
        android:id="@+id/energyUp"
        android:layout_above="@+id/happyUp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="energyDown"
        android:id="@+id/energyDown"
        android:layout_alignBottom="@+id/energyUp"
        android:layout_alignRight="@+id/stressDown"
        android:layout_alignEnd="@+id/stressDown" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Name here"
        android:id="@+id/charName"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Energy: "
        android:id="@+id/energyLabel"
        android:layout_below="@+id/charName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="energyVal"
        android:id="@+id/energyVal"
        android:layout_below="@+id/charName"
        android:layout_toRightOf="@+id/energyLabel"
        android:layout_toEndOf="@+id/energyLabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Happiness: "
        android:id="@+id/happyLabel"
        android:layout_below="@+id/energyLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="happyVal"
        android:id="@+id/happyVal"
        android:layout_below="@+id/energyVal"
        android:layout_toRightOf="@+id/happyLabel"
        android:layout_toEndOf="@+id/happyLabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Stress: "
        android:id="@+id/stressLabel"
        android:layout_below="@+id/happyLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="stressVal"
        android:id="@+id/stressVal"
        android:layout_below="@+id/happyLabel"
        android:layout_toRightOf="@+id/stressLabel"
        android:layout_toEndOf="@+id/stressLabel" />
</RelativeLayout>
