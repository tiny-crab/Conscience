<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.zachcrabtree.commonconscience.PlayerScreen">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Name here"
        android:id="@+id/charName"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/energyLabel"
        android:id="@+id/energyLabel"
        android:layout_below="@+id/charName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="energyVal"
        android:id="@+id/energyVal"
        android:layout_below="@+id/charName"
        android:layout_toRightOf="@+id/energyLabel"
        android:layout_toEndOf="@+id/energyLabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/happyLabel"
        android:id="@+id/happyLabel"
        android:layout_below="@+id/energyLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="happyVal"
        android:id="@+id/happyVal"
        android:layout_below="@+id/energyVal"
        android:layout_toRightOf="@+id/happyLabel"
        android:layout_toEndOf="@+id/happyLabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/stressLabel"
        android:id="@+id/stressLabel"
        android:layout_below="@+id/happyLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="stressVal"
        android:id="@+id/stressVal"
        android:layout_below="@+id/happyLabel"
        android:layout_toRightOf="@+id/stressLabel"
        android:layout_toEndOf="@+id/stressLabel" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/button4"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="text"
        android:id="@+id/testview"
        android:layout_below="@+id/stressLabel"
        android:layout_alignRight="@+id/happyVal"
        android:layout_alignEnd="@+id/happyVal"
        android:layout_marginTop="80dp" />


</RelativeLayout>
